{
  "manifest_version": 3,
  "name": "Fiverr Local Time Filter",
  "version": "1.0.0",
  "description": "Read freelancer local times on Fiverr Pro and close tabs not in a chosen country/timezone.",
  "icons": {
    "16": "assets/icons/icon-16.png",
    "32": "assets/icons/icon-32.png",
    "48": "assets/icons/icon-48.png",
    "128": "assets/icons/icon-128.png"
  },
  "permissions": ["tabs", "storage", "scripting", "clipboardRead", "sidePanel", "windows"],
  "host_permissions": [
    "https://pro.fiverr.com/freelancers/*"
  ],
  "background": {
    "service_worker": "scripts/background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://pro.fiverr.com/freelancers/*"],
      "js": ["scripts/contentScript.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_title": "Fiverr Time Filter",
    "default_icon": {
      "16": "assets/icons/icon-16.png",
      "32": "assets/icons/icon-32.png",
      "48": "assets/icons/icon-48.png",
      "128": "assets/icons/icon-128.png"
    }
  },
  "side_panel": {
    "default_path": "popup/index.html"
  }
}
