{
  "manifest_version": 3,
  "name": "Difference Finder",
  "version": "1.0.0",
  "description": "Compare two lists of URLs or words line by line and find differences",
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "clipboardWrite",
    "clipboardRead",
    "tabs",
    "activeTab"
  ],
  "icons": {
    "16": "assets/icon-16.png",
    "32": "assets/icon-32.png",
    "48": "assets/icon-48.png",
    "128": "assets/icon-128.png"
  },
  "host_permissions": [
    "https://api.github.com/*",
    "https://github.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://github.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}

