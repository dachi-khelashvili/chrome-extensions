{
    "manifest_version": 3,
    "name": "Email Extractor",
    "version": "1.0.0",
    "description": "Extract email addresses from all open tabs.",
    "permissions": [
        "tabs",
        "scripting",
        "clipboardWrite",
        "sidePanel"
    ],
    "icons": {
        "128": "assets/icon-128.png",
        "48": "assets/icon-48.png",
        "32": "assets/icon-32.png",
        "16": "assets/icon-16.png"
    },
    "host_permissions": [
        "<all_urls>"
    ],
    "action": {
        "default_title": "Open Email Extractor"
    },
    "side_panel": {
        "default_path": "popup.html"
    },
    "background": {
        "service_worker": "background.js"
    }
}