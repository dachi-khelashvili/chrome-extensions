{
  "manifest_version": 3,
  "name": "Fiverr Assistant",
  "version": "1.0.0",
  "description": "Navigate Fiverr inbox contacts and automate message sending on freelancer pages with keyboard shortcuts",
  "icons": {
    "16": "assets/icons/icon-16.png",
    "32": "assets/icons/icon-32.png",
    "48": "assets/icons/icon-48.png",
    "128": "assets/icons/icon-128.png"
  },
  "action": {
    "default_popup": "popup/index.html",
    "default_icon": {
      "16": "assets/icons/icon-16.png",
      "32": "assets/icons/icon-32.png",
      "48": "assets/icons/icon-48.png",
      "128": "assets/icons/icon-128.png"
    }
  },
  "permissions": [
    "activeTab",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://pro.fiverr.com/freelancers/*",
        "https://pro.fiverr.com/inbox",
        "https://pro.fiverr.com/inbox/",
        "https://pro.fiverr.com/inbox/*"
      ],
      "js": ["content/content.js"],
      "run_at": "document_idle"
    }
  ]
}

